{
  "exclude": ["tests", "dst"],
  "include": ["src"],
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dst",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "Node"
  }
}
